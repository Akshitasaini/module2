<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <display-name>Archetype Created Web Application</display-name>
 <servlet>
  <servlet-name>CustomerController</servlet-name>
  <servlet-class>comm.example.servlet.CustomerController</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>CustomerView</servlet-name>
  <servlet-class>comm.example.view.CustomerView</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>CustomerController</servlet-name>
  <url-pattern>/controller.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CustomerView</servlet-name>
  <url-pattern>/success.view</url-pattern>
 </servlet-mapping>
</web-app>
